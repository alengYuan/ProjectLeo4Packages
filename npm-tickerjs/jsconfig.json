{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "target": "esnext",
        "typeRoots": [
            "node_modules/@types/**"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "**/node_modules/*",
        "dist",
        "node_modules",
        "temp",
        "tmp"
    ]
}