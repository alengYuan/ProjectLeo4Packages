{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "**/node_modules/*",
        "dist",
        "node_modules",
        "temp",
        "tmp"
    ]
}